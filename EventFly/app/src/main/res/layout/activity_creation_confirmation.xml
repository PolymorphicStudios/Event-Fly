<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="bth740.eventfly.Create.CreationConfirmationActivity">

    <!-- EVENT CREATION COMPLETE TITLE -->
    <TextView
        android:id="@+id/ec_complete_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EVENT CREATION - COMPLETE"
        android:textColor="#666666"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/ec_complete_title_tv"
        android:background="#666666" />

    <!-- Begin Enter Description -->
    <TextView
        android:id="@+id/ec_complete_info_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ec_complete_title_tv"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:text="Thank you! Please enjoy the event\nClick below to return to the main screen"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <Button
        android:id="@+id/ec_returnToMainScreen_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ec_complete_info_title_tv"
        android:text="Main Screen"
        android:layout_centerHorizontal="true"
        android:onClick="onMainScreenClicked"/>

</RelativeLayout>
