<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="bth740.eventfly.View.EventlistFragment">

    <TextView
        android:id="@+id/event_featured_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Featured Events"
        android:textColor="#666666"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/event_featured_title_tv"
        android:background="#666666" />

    <RelativeLayout
        android:id="@+id/featured_image_layout_iv"
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/event_featured_title_tv"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/featured_image_iv"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/left_iv"
            android:layout_width="40dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/featured_image_iv"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:src="@drawable/back"/>

        <ImageView
            android:id="@+id/right_iv"
            android:layout_width="40dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/featured_image_iv"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:src="@drawable/forward"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/featured_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/featured_image_layout_iv"
        android:hint="Title here"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceMedium"/>


</RelativeLayout>
