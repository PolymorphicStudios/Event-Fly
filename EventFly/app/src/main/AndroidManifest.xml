<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="bth740.eventfly" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="21" />

    <android:uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />
    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:theme="@style/AppTheme" >
        <activity android:name="bth740.eventfly.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="bth740.eventfly.ViewRecipeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name="bth740.eventfly.CustomOnItemSelectedListener"
            android:label="@string/title_activity_custom_on_item_selected_listener" >
        </activity>
        <activity
            android:name="bth740.eventfly.ContactHostActivity"
            android:label="@string/title_activity_contact_host" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ViewRecipeActivity" />
        </activity>
    </application>

</manifest>
